{
  "include": [
    "./src/**/*",
  ],
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [],
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "./test/**/*",
  ],
  "compileOnSave": false
}